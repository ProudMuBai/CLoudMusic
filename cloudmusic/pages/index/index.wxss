/*轮播图区域*/
.banners{
  width: 100%;
  height: 300rpx;
}

.banners image{
  width: 95%;
  height: 90%;
  border-radius: 30rpx;
  margin: 10rpx 20rpx;
}
/*图标导航区域*/
.navContainer{
  display: flex;
}

.navContainer .navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  color: #00E3E3;
  background: #ECFFFF;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}
/*推荐歌曲部分*/
.recommendContainer{
  padding: 20rpx;
}


/*推荐内容区域 */
.recommendScroll{
  display: flex;
  height: 280rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text{
  font-size: 22rpx;
  /* 单行文本溢出隐藏 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;*/
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;/*设置对齐模式,纵向对齐*/
  -webkit-line-clamp: 2;/*设置默认行数*/

}

/*排行榜区域*/
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 400rpx;
}
.swiperItem{
  width: 96%;
  background: #fbfbfb;
  border-radius: 10rpx;
}
.swiperItem .title{
  font-size: 26rpx;
  line-height: 60rpx;
}

.musicItem{
  display: flex;
  margin-bottom: 10rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-left: 20rpx;
}
.musicItem .musicName {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-left: 20rpx;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


