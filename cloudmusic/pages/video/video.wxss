
/* 头部区域 */
.videoContainer .header{
  display: flex;
}

.videoContainer .search{
  /* width: 80%;6 */
  height: 60rpx;
  margin: 8rpx ;
  padding: 0 auto;
  display: flex;
  flex: 1;
  background: #eeeeee;
  border-radius: 30rpx;
}

.header .movie{
  width: 50rpx;
  height: 50rpx;
  margin: auto 2%;
}
.header .music{
  width: 60rpx;
  height: 60rpx;
  margin: auto 2%;
}

.search .iconfont{
  width: 40%;
  margin: auto;
  text-align: right;
}

.search input{
  margin: auto;

}

/* 导航区域 */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 80rpx;
}

.navScroll .navItem{
  padding: 20rpx 10rpx;
  height: 40rpx;
  line-height: 40rpx;

}

.navItem .navContent{
  width: 100%;
  text-align: center;
  margin: 10rpx 30rpx;
}

.navItem .active{
  background: #b2f1f3;
  border-radius: 20rpx;
}

/*视频列表区域*/
.videoScroll{
  /* calc: 可以动态计算css的宽度*/
  /*视口单位: vj vw  1vh =1%视口高度  1vw= 1%的视口宽度*/
  height: calc(100vh - 156rpx);
}

.videoItem {
  padding: 2% 3%;
  border-radius: 10rpx;
  border: 3rpx solid rgb(113, 209, 226) ;
}
.videoItem .common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.videoItem .content{
  font-size: 25rpx;
  color: #7e7272;
  height: 60rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/*footer*/
.footer{
  border-top: 1rpx solid #eeeeee;
  padding: 20rpx 0;
}

.footer .avatar{
  width: 60rpx;
  height: 56rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer .nickName{
  font-size: 22rpx;
  vertical-align: bottom;
  margin-left: 20rpx;
}

.comments_parsed{
  float: right;
  margin-top: 15rpx;
}

.comments_parsed .btn{
  display: inline;
  padding: 0;
  background: transparent;
  border-color: transparent;
}
.comments_parsed .btn::after{
  border: none;
}

.comments_parsed .item{
  margin-left:  60rpx ;
  position: relative;
}
.comments_parsed .item .iconfont{
  font-size: 40rpx;
}
.comments_parsed .item .count{
  position: absolute;
  top: -25rpx;
  color: #999898;
  font-size: 20rpx;
}