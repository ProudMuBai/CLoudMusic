.recommendSongContainer .header{
    width: 100%;
    height: 300rpx;
    position: relative;
}

.recommendSongContainer .header image{
    width: 100%;
    height: 100%;
}


.header .date{
    position: absolute;
    left: 3%;
    top: 3%;
    width: 300rpx;
    height: 100rpx;
    text-align: left;

}
.header .date .time{
    display: inline-flex;
    font-size: 100rpx;
    font-weight: bold;
    color: rgba(255,240,245, 0.6);
}

.header .date .day{
    margin-left: 20rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: rgba(255,240,245, 0.6);
}


/*音乐列表区域*/
/*头部标签区域*/
.ListContainer{
    position: relative;
    top: -10rpx;
    padding: 0 20rpx;
    border-radius: 10rpx;
    background: #ffffff;
}

.listHeader{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
}
.listHeader .icon-bofang1:before{
    color: #4EFEB3;
}

.listHeader .icon-youxuliebiao{
    float: right;
    color: #bfbfbf;
}

/*列表内容区*/
.listScroll{
    height: calc(100vh - 380rpx);
}

.scrollItem{
    position: relative;
    display: flex;
    margin-bottom: 20rpx;
}

.scrollItem image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.musicInfo{
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    color: #BEBEBE;
}

.musicInfo text{
    height: 40rpx;
    font-size: 22rpx;
    max-width: 300rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.musicInfo .musicName{
    font-size: 25rpx;
    font-weight: bold;
    line-height: 40rpx;
    color: #5B5B5B;
}

.scrollItem .iconfont{
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
    color: #bfbfbf;
}

/*隐藏scroll-view的滚动的那个条  scrollbar*/
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}












